@model Proyecto_ED22.Models.PacienteModel

@{
    ViewData["Title"] = "BuscarDPI";
}

<h1>BuscarDPI</h1>

@using (Html.BeginForm())
{
    <p>
        Buscar por DPI: @Html.TextBox("DPI")
        <input type="submit" value="Buscar DPI" />>
    </p>
}

@if (Model != null)
{
    <div>
        <h4>PacienteModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DPI)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DPI)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Edad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Edad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaUltimaConsulta)
            </dt>
            <dd class="col-sm-10">
                @if (Model.FechaProximaConsulta != null)
                {
                    Html.DisplayNameFor(model => model.FechaProximaConsulta);
                }
                else
                {
                    <p class="text-center">Sin fecha</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaProximaConsulta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaProximaConsulta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Descripcion != "")
                {
                    Html.DisplayNameFor(model => model.Descripcion);
                }
                else
                {
                    <p class="text-center">Sin Descripción</p>
                }
            </dd>
        </dl>
    </div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.DPI})
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
