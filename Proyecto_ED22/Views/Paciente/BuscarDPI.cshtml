@model Proyecto_ED22.Models.PacienteModel

@{
    ViewData["Title"] = "BuscarDPI";
}

<h1>Buscar DPI</h1>
<br />

@using (Html.BeginForm())
{
    <p>
        Buscar por DPI: @Html.TextBox("DPI") <br />
        <input type="submit" value="Buscar DPI" />
    </p>
}
<br />
@if (Model != null)
{
    <div>
        <h4>Paciente</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DPI)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DPI)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Edad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Edad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaUltimaConsulta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaUltimaConsulta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaProximaConsulta)
            </dt>
            <dd class="col-sm-10">
                @if (Model.FechaProximaConsulta != null)
                {
                    @Html.DisplayFor(model => model.FechaProximaConsulta);
                }
                else
                {
                    <p class="text-center">Sin fecha</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Descripcion != "")
                {
                    @Html.DisplayFor(model => model.Descripcion);
                }
                else
                {
                    <p>Sin Descripción</p>
                }
            </dd>
        </dl>
    </div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.DPI })
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Message");
    };
    </script>
}

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>
